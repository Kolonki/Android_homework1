<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:orientation="vertical"
    tools:context=".Page2" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3/4\n#990000"
            android:background="#990000"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_weight="3" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1/4\n#9966CC"
            android:background="#9966CC"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_weight="1" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" 
        android:orientation="horizontal">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2/5\n#339999"
            android:background="#339999"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_weight="2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1/5\n#9999FF"
            android:background="#9999FF"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_weight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2/5\n#99CC99"
            android:background="#99CC99"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_weight="2" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1/7\n#336633"
            android:background="#336633"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_weight="1" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4/7\n#FF9933"
            android:background="#FF9933"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_weight="4" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2/7\n#FFCC99"
            android:background="#FFCC99"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_weight="2" />
    </LinearLayout>

</LinearLayout>
